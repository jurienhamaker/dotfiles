#! /bin/bash

source ~/.config/bspwm/variables

COUNT=$(bspc query -M | wc -l);
CONNECTED=$(xrandr | grep " connected " | awk '{ print$1 }');
INDEX=0
for MONITOR in $CONNECTED
do
        if [ $COUNT -eq "2" ]; then
                if [ $INDEX -eq 1 ]; then
                        bspc monitor $MONITOR -d $firefox $code $terminal $git $spotify $home $other1 $other2
                else
                        bspc monitor $MONITOR -d $chat $mail
                fi
        else
                bspc monitor -d $firefox $code $terminal $chat $git $mail $spotify $home $other1 $other2
        fi
        INDEX=$(( INDEX + 1 ))
done

#./monitor-subscriber &
